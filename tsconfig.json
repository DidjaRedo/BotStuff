{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "paths": {
            "*": [
                "node_modules/",
            ],
            "typings/*": [
                "src/typings/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test/**/*.spec.ts"
    ]
}